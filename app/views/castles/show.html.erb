  <h1><%= @castle.name %></h1>
  <p>Location: <%= @castle.location %></p>
  <p>Price: <%= @castle.price %>â‚¬</p>

  <div class="row">
    <div class="col-lg-6">
      <% @castle.photos.each do |photo| %>
        <%= cl_image_tag photo.key,
            width: 400, height: 300, crop: :fill %>
      <% end %>
    </div>
    <div class="col-lg-6">
      <div style="width: 582px; height: 300px;"
      data-controller="map"
