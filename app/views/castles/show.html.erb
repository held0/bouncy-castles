<div class="container">
  <h1><%= @castle.name %></h1>
  <p>Location: <%= @castle.location %></p>
  <p>Price: <%= @castle.price %></p>

  <% @castle.photos.each do |photo| %>
    <%= cl_image_tag photo.key,
        width: 400, height: 300, crop: :fill %>
  <% end %>
</div>

<div class="container">
  <div class= "d-inline">
    <%= link_to "Book Now", new_castle_booking_path(@castle), class: "btn btn-primary"  %>
  </div>
</div>
